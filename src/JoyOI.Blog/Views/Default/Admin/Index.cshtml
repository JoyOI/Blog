@model User
@{
    ViewBag.Title = SR["Admin Panel"];
}
@if (Html.IsRaw())
{
    @(new HtmlString("<div>"))
    <div id="raw_info">
        <div class="role-title">@ViewBag.Title</div>
        <div class="role-body-class">home</div>
        <div class="role-category">home</div>
        <div class="role-head-title">
            <h1>@ViewBag.Title</h1>
        </div>
    </div>
}
<div class="cont-wrap">
    <div class="grid_9">
        <div class="post">
            <div class="post-body">
                <form asp-action="Index" asp-controller="Admin" method="post" id="frmConfig">
                    <p>
                        @SR["Site name"]: <br />
                        <input type="text" name="site" value="@Model.SiteName" />
                    </p>
                    <p>
                        @SR["Description"]: <br />
                        <input type="text" name="summary" value="@Model.Summary" />
                    </p>
                    <p>
                        <input type="submit" value="@SR["Save"]">
                    </p>
                </form>
            </div>
        </div>
    </div>
    @Html.Partial("Sidebar")
</div>
@if (Html.IsRaw())
{
    @(new HtmlString("</div>"))
}