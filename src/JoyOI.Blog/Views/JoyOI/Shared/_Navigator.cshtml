<div id="navbar" class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-left">
        <li class="home"><a asp-action="Index" asp-controller="Home">首页</a></li>
        @if (ViewBag.Catalogs != null)
        {
            foreach (CatalogViewModel x in ViewBag.Catalogs)
            {
                <li class="home"><a href="/catalog/@x.Url.ToLower()">@x.Title</a></li>
            }
        }
    </ul>
    <ul class="nav navbar-nav navbar-right">
        @if (User.IsSignedIn())
        {
        <li class="logout"><a href="javascript:$('#frmLogout').submit()">注销</a></li>
        <form id="frmLogout" asp-action="Logout" asp-controller="Admin" method="post"></form>
        }
        else
        {
        <li class="login"><a asp-action="Login" asp-controller="Admin">登录</a></li>
        <li class="register"><a href="http://uc.joyoi.cn/Register">注册</a></li>
        }
    </ul>
</div>
